<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <TextView
        android:id="@+id/textViewVentas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ventas realizadas: 0"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/textViewTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total vendido: $0.0"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/textViewProductos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Productos vendidos:"
        android:textSize="18sp"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/btnHacerVenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Venta de Ejemplo"/>
</LinearLayout>